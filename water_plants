blueprint:
  name: Water plants
  description: Warning to water and fertilize plants
  domain: automation
  author: Mike Clark
  input:
    time:
      name: Time to test on
      description: Test is run at configured time
      default: '18:00:00'
      selector:
        time: {}
    day:
      name: Weekday to test on
      description: 'Test is run at configured time either everyday (0) or on a given
        weekday (1: Monday ... 7: Sunday)'
      default: 0
      selector:
        number:
          min: 0.0
          max: 7.0
          mode: slider
          step: 1.0
    notify_device:
      name: Device to notify
      description: What device to notify
      selector:
        device:
          integration: mobile_app
    exclude:
      name: Excluded Sensors
      description: Plant sensors (e.g. cactus) to exclude from detection. Only entities are supported, devices must be expanded!
      default: {entity_id: []}
      selector:
        target:
          entity:
            domain: plant
trigger:
  - platform: time
    at: !input time

condition:
  - condition: template
    value_template: "{{ states.plant | selectattr('attributes.moisture_status', 'match', 'Low') | rejectattr('entity_id', 'in', exclude) | list | count > 0 }}"

action:
  - domain: mobile_app
    type: notify
    device_id: !input notify_device
    title: Plants ðŸŒ±
    message: >-
      {% for plant in states.plant | selectattr('attributes.moisture_status', 'match', 'Low') | rejectattr('entity_id', 'in', exclude) %}
        {{- plant.name }} ðŸ’§{% if 'Low' in plant.attributes.conductivity_status %}{% endif -%} {% if not loop.last %}, {% endif -%}
      {% endfor %}
mode: single
